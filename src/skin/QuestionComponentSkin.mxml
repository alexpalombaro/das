<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:button="component.button.*">

    <fx:Metadata>
        [HostComponent("component.QuestionComponent")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void {
            super.updateDisplayList(unscaledWidth, unscaledHeight);
        }
        ]]>
    </fx:Script>

    <s:VGroup width="100%" height="100%">

        <s:Group width="100%" height="50%">
            <s:Label id="questionText" width="100%" textAlign="center" fontSize="60" verticalCenter="0"/>
        </s:Group>

        <s:VGroup id="buttonGroup" width="100%" gap="20" horizontalAlign="center" paddingBottom="20">
            <button:AnswerButton label="Not at all" width="400" value="1"/>
            <button:AnswerButton label="Sometimes" width="400" value="2"/>
            <button:AnswerButton label="Often" width="400" value="3"/>
            <button:AnswerButton label="All the time" width="400" value="4"/>
        </s:VGroup>

    </s:VGroup>

</s:Skin>
