<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        [HostComponent("spark.components.Button")]
    </fx:Metadata>

    <s:states>
        <s:State name="disabled"/>
        <s:State name="down"/>
        <s:State name="over"/>
        <s:State name="up"/>
    </s:states>

    <s:Ellipse width="100%" height="100%">
        <s:fill>
            <s:SolidColor color="0x436fb5"
                          color.over="0x578ddd"
                          color.down="0x578ddd"/>
        </s:fill>
    </s:Ellipse>

    <s:Label id="labelDisplay" color="white" paddingLeft="50" paddingRight="50" verticalCenter="0" width="100%"
             horizontalCenter="0" textAlign="center"/>

</s:Skin>
